<Window x:Class="CarPlusWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarPlusWPF"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox Name="txtEmail" Margin="0,0,0,20"/>
            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,0,0">
                <Button Content="Войти" Click="Button_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Отмена"  Width="100" Click="Login_Closed"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
